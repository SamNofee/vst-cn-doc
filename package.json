{
  "name": "vst-cn-doc",
  "version": "1.0.0",
  "description": "The documentation of VST/VST3 of Chinese",
  "exports": "./md2docs.ts",
  "author": "SamNofee",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "npx mocha --grep 'Build vst docs'",
    "test": "npx mocha --grep 'Md2docs unit test'",
    "lint": "npx eslint . --ext .ts"
  },
  "engines": {
    "node": ">=16.17"
  },
  "dependencies": {
    "chance": "^1.1.9",
    "marked": "^4.2.5"
  },
  "devDependencies": {
    "@types/marked": "^4.0.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.2",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "mocha": "^10.0.0",
    "power-assert": "^1.6.1",
    "simple-git-hooks": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "*.test.ts",
    "node-option": [
      "experimental-specifier-resolution=node",
      "loader=ts-node/esm"
    ]
  },
  "simple-git-hooks": {
    "pre-push": "npm run lint && npm run test && npm run build"
  }
}
